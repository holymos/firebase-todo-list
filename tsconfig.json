{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "types": ["cypress"],
    "paths": {
      "types/*": ["types/*"],
      "@utils/*": ["utils/*"],
      "@pages/*": ["pages/*"],
      "@router/*": ["router/*"],
      "@styles/*": ["styles/*"],
      "@contexts/*": ["contexts/*"],
      "@services/*": ["services/*"],
      "@constants/*": ["constants/*"],
      "@components/*": ["components/*"]
    }
  },
  "include": ["src", "cypress"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
